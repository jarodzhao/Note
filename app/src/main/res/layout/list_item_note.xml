<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_note_favorited_check_box"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:checked="false"
        android:padding="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_note_title_text_view"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/list_item_note_favorited_check_box"
        android:layout_toStartOf="@+id/list_item_note_favorited_check_box"
        android:textStyle="bold"
        android:padding="4dp"
        android:text=""
        tools:text="@string/note_title_hint"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text=""
        android:id="@+id/list_item_note_content_text_view"
        android:layout_below="@+id/list_item_note_title_text_view"
        android:layout_toLeftOf="@+id/list_item_note_favorited_check_box"
        android:layout_toStartOf="@+id/list_item_note_favorited_check_box"
        android:padding="4dp"
        tools:text="@string/note_content_hint"/>
</RelativeLayout>